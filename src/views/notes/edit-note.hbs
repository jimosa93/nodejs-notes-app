<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Edit note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit/{{_id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" value="{{title}}" autofocus>
        </div>
        <div class="form-group">
          <textarea name="description" placeholder="Description" class="form-control">{{description}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>